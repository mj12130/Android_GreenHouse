<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:id="@+id/homeRoot"
    android:background="@color/background"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="30dp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src ="@drawable/banner"
        android:background="@color/background"
        android:id="@+id/bannerBtn" />


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/home_achieve"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:elevation="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/achievesprout"
            android:layout_gravity="center"
            android:id="@+id/image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="좋은 하루 보내고 계신가요?"
            android:id="@+id/text1"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/home_sprout"
            android:id="@+id/text2"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/homeroutinebutton"
            android:background="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/goRoutine"/>

    </LinearLayout>

</LinearLayout>